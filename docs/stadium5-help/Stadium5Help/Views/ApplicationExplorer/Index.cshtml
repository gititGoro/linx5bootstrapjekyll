@{
    ViewBag.Title = "Designer Features";
}

<h1>Designer Features</h1>

@foreach (var item in Stadium5Help.Models.Section.ApplicationExplorer)
{
    <hr>
    <div class="iconWrap"><a href="@Href(item.Href)"><img src="@Href(item.Icon)" alt="" width="64" height="64" border="0" class="icon-64"></a></div>
    <div class="link-list-item">
        <h5><a href="@Href(item.Href)">@item.DisplayName</a></h5>
        @foreach (var descriptionPart in item.Description)
        {
            if (descriptionPart.IsHtml)
            {
                @Html.Raw(descriptionPart.Value)
            }
            else
            {
                @descriptionPart.Value
            }
        }
    </div>
    <div class="clearfix"></div>
}
<hr>